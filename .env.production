# Production Environment Configuration
ENVIRONMENT=production

# Database Configuration
# Update these values for your production database
DATABASE_URL=postgresql://user:password@localhost:5432/andamios_prod
DATABASE_ENGINE=postgresql

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_RELOAD=false

# JWT Authentication Configuration
# IMPORTANT: Change these values in production!
JWT_SECRET_KEY=your-production-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS Configuration
# Update with your production domains
CORS_ALLOW_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# Logging Configuration
LOG_LEVEL=ERROR
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s